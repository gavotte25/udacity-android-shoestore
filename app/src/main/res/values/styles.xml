<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/lora_italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormLabel" parent="PrimaryText">
        <item name="android:layout_width">@dimen/label_width</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormInput" parent="PrimaryText">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="WelcomeContent" parent="PrimaryText">
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InstructionContent" parent="PrimaryText">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/float_button_margin</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


</resources>
